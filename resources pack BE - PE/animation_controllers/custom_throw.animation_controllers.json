{
  "animation_controllers": {
    "controller.animation.custom_throw": {
      "states": {
        "custom_throw1": {
          "animations": ["spear_charge"],
          "blend_transition": 0.1,
          "transitions": [
            {
              "default": "!q.is_using_item || (!v.has_spear && !v.has_trident)"
            }
          ]
        },
        "custom_throw2": {
          "animations": ["dagger_charge"],
          "blend_transition": 0.1,
          "transitions": [
            {
              "default": "!q.is_using_item || (!v.has_dagger && !v.has_shuriken)"
            }
          ]
        },
        "default": {
          "blend_transition": 0.1,
          "transitions": [
            {
              "custom_throw1": "(v.has_spear || v.has_trident) && q.is_using_item"
            },
            {
              "custom_throw2": "(v.has_dagger || v.has_shuriken) && q.is_using_item"
            }
          ]
        }
      }
    }
  },
  "format_version": "1.10.0"
}